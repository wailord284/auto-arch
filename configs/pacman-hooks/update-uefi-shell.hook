[Trigger]
Operation=Install
Operation=Upgrade
Type=Package
Target=edk2-shell

[Action]
Description=Updating UEFI shell for GRUB
When=PostTransaction
NeedsTargets
Exec=/usr/bin/cp /usr/share/edk2-shell/x64/Shell_Full.efi /boot/EFI/tools/shellx64.efi